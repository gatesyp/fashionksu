<Window x:Class="KentHackathon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KentHackathon"
        xmlns:k="http://schemas.microsoft.com/kinect/2013"
        mc:Ignorable="d"
        Title="MainWindow" Height="1280" Width="720">
    <k:KinectRegion Name="kinectRegion">
        <Grid x:Name="MainFrameGrid" Background="Black" k:KinectTileButton.Click="MainFrameGrid_Click">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <k:KinectUserViewer Grid.Row="0" Grid.ColumnSpan="2"  k:KinectRegion.KinectRegion="{Binding ElementName=kinectRegion}" Height="150" HorizontalAlignment="Center" VerticalAlignment="Top" />

            <k:KinectSensorChooserUI Grid.Row="0" Grid.ColumnSpan="2" VerticalAlignment="Top" Name="sensorChooserUi" />
            <k:KinectTileButton Width="Auto" Height="Auto" Grid.Row="1" Grid.Column="0" Name="tile1" Background="LightBlue" />

        </Grid>
    </k:KinectRegion>
</Window>
